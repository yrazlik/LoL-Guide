<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeAppInstallAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:background="@color/cardview_bg"
    app:cardCornerRadius="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineProvider="bounds"
        android:descendantFocusability="blocksDescendants"
        android:elevation="2dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:id="@+id/adContainerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/adImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"/>

            <RelativeLayout
                android:id="@+id/textContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/adImage"
                android:minHeight="60dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp">

                    <com.yrazlik.loltr.view.RobotoTextView
                        android:id="@+id/adHeadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textAppearance="@style/sp14BlackBold"/>

                    <com.yrazlik.loltr.view.RobotoTextView
                        android:id="@+id/adBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adHeadline"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textAppearance="@style/sp11GrayItalic"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/textContainer"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@color/divider_gray">

            </View>

            <com.yrazlik.loltr.view.RobotoTextView
                android:id="@+id/callToActionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator"
                android:layout_centerHorizontal="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/arrow_right_blue_thin"
                android:focusable="false"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="@string/read_more"
                android:textAppearance="@style/sp14BlueRegular"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</com.google.android.gms.ads.formats.NativeAppInstallAdView>