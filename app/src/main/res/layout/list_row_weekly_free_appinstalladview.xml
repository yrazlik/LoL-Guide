<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeAppInstallAdView xmlns:android="http://schemas.android.com/apk/res/android"
                                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:focusable="true"
                                                           android:background="@drawable/selector_listview_material">

    <RelativeLayout
        android:id="@+id/adContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">


        <com.pkmmte.view.CircularImageView
            android:id="@+id/adImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            app:border="true"
            app:border_color="@color/white"
            app:border_width="1.5dp"/>

        <RelativeLayout
            android:id="@+id/rlTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/relativeLayoutPriceContainer"
            android:layout_toRightOf="@+id/adImage">

            <com.yrazlik.loltr.view.RobotoTextView
                android:id="@+id/adHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/sp14BlackBold"
                android:textColor="@color/black"/>

            <com.yrazlik.loltr.view.RobotoTextView
                android:id="@+id/adBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adHeadline"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/sp12GrayRegular"/>
        </RelativeLayout>
    </RelativeLayout>
</com.google.android.gms.ads.formats.NativeAppInstallAdView>