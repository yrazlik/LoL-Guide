<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeContentAdView xmlns:android="http://schemas.android.com/apk/res/android"
                                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/adContainerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_listview_material"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">


            <ImageView
                android:id="@+id/adIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <com.yrazlik.loltr.view.RobotoTextView
                android:id="@+id/headlineTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/adIV"
                android:background="@color/transparent_black_gray"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/sp14WhiteBold"/>

            <com.yrazlik.loltr.view.RobotoTextView
                android:id="@+id/bodyTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adIV"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:textStyle="normal"/>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/bodyTV"
                android:layout_marginTop="15dp"
                android:background="@color/divider_gray">
            </View>

            <com.yrazlik.loltr.view.RobotoTextView
                android:id="@+id/callToActionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator"
                android:layout_centerHorizontal="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/arrow_right_blue_thin"
                android:focusable="false"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:text="@string/read_more"
                android:textAppearance="@style/sp14BlueRegular"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</com.google.android.gms.ads.formats.NativeContentAdView>