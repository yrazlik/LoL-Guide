<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="2dp"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relativeLayoutSpellTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="13dp"
            android:paddingTop="13dp">

            <com.yrazlik.loltr.view.RobotoTextView
                android:id="@+id/textViewSpellTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textAppearance="@style/sp13BlackBold"/>

        </RelativeLayout>

        <View
            android:id="@+id/titleSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/relativeLayoutSpellTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divider_gray">
        </View>

        <RelativeLayout
            android:id="@+id/relativeLayoutSpellBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleSeparator"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:gravity="center">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/imageViewSpellImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"/>

            <com.yrazlik.loltr.view.RobotoTextView
                android:id="@+id/textViewSpellBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imageViewSpellImage"
                android:text="asdasdasdasdasdasdqweqweqweqwe"
                android:textAppearance="@style/sp12GrayRegular"/>

        </RelativeLayout>

        <View
            android:id="@+id/specsSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/relativeLayoutSpellBody"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@color/divider_gray">
        </View>

        <com.yrazlik.loltr.view.RobotoTextView
            android:id="@+id/textViewVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/specsSeparator"
            android:layout_centerHorizontal="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_right_blue_thin"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="13dp"
            android:text="@string/video"
            android:textAppearance="@style/sp13BlueRegular"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>