<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/cardview_bg"
                                    android:elevation="1dp"
                                    app:cardCornerRadius="0dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_listview_material"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/imageViewChannelLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"/>

        <com.yrazlik.loltr.view.RobotoTextView
            android:id="@+id/textViewChannelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imageViewPlayChannel"
            android:layout_toRightOf="@+id/imageViewChannelLogo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="RiotGamesTurkish"
            android:textAppearance="@style/sp14BlackBold"/>

        <ImageView
            android:id="@+id/imageViewPlayChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_blue_thin"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>