<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_listview_material"
                android:minHeight="90dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/divider_gray"></View>

    <com.pkmmte.view.CircularImageView
        android:id="@+id/champIV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <com.yrazlik.loltr.view.RobotoTextView
        android:id="@+id/swordsIV"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/champIV"
        android:background="@drawable/ip"/>

    <com.yrazlik.loltr.view.RobotoTextView
        android:id="@+id/kdaTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/swordsIV"
        android:text=" ?/?/? "
        android:textAppearance="@style/sp12BlackRegular"/>

    <RelativeLayout
        android:id="@+id/goldContainerRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/winLoseContainerRL">

        <ImageView
            android:id="@+id/goldIV"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/coins"/>

        <com.yrazlik.loltr.view.RobotoTextView
            android:id="@+id/goldTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/goldIV"
            android:text=" ??? "
            android:textAppearance="@style/sp12BlackRegular"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/winLoseContainerRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/downArrow">

        <com.yrazlik.loltr.view.RobotoTextView
            android:id="@+id/gamesPlayedTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ??? "
            android:textAppearance="@style/sp12BlackRegular"/>

        <com.yrazlik.loltr.view.RobotoTextView
            android:id="@+id/winCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gamesPlayedTV"
            android:layout_marginTop="5dp"
            android:text=" ??? "
            android:textAppearance="@style/sp12BlackRegular"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/downArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_down_black_thin"/>

</RelativeLayout>