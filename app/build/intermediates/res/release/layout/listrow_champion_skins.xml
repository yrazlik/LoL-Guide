<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/skinContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <ImageView
            android:id="@+id/championSkin"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/championSkin"
            android:background="#80C9C1C9"
            android:layout_alignLeft="@+id/championSkin"
            android:layout_alignRight="@+id/championSkin">

            <TextView
                android:id="@+id/skinName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gotik Annie"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/imageProgress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>


</RelativeLayout>
