<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="80dp"
                android:background="@drawable/selector_listview">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/newsIV"
        android:layout_width="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_height="80dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/rightArrow"
        android:layout_toRightOf="@+id/newsIV">

        <TextView
            android:id="@+id/newsTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/material_yellow"
            style="@style/whiteText16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsTitleTV"
            android:singleLine="true"
            style="@style/whiteText14dp"
            android:textStyle="italic"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/arrow_right"/>


</RelativeLayout><!-- From: file:/Users/yrazlik/AndroidstudioProjects/Lol/app/src/main/res/layout/list_row_news.xml -->