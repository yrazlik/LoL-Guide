<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color">

    <TextView
        android:id="@+id/textviewContactText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/whiteText15dp"
        android:text="@string/contact_text"/>
    
    <EditText
        android:id="@+id/edittextContactBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textviewContactText"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/buttonContact"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextContactBox"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@color/red_text_color"
        android:layout_centerHorizontal="true"
        android:text="@string/send"/>

</RelativeLayout><!-- From: file:/Users/yrazlik/AndroidstudioProjects/Lol/app/src/main/res/layout/fragment_contact.xml -->