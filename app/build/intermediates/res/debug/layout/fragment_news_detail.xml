<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:scrollbars="none">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/largeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/largeImage"
            android:layout_marginTop="15dp"
            android:textIsSelectable="true"
            android:textSize="14sp"/>

        <View
            android:id="@+id/blank"
            android:layout_width="match_parent" android:layout_height="10dp"
            android:layout_below="@+id/message"></View>

        <RelativeLayout
            android:id="@+id/wvLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/blank"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/watchFullScreenTV"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="14sp" android:textStyle="bold" android:textColor="@color/button_blue"
                android:text="@string/watch_full_screen" android:paddingTop="5dp" android:paddingBottom="10dp"/>
            <WebView
                android:id="@+id/wv"
                android:layout_below="@+id/watchFullScreenTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp">

            </WebView>

        </RelativeLayout>


    </RelativeLayout>

</ScrollView><!-- From: file:/Users/yrazlik/AndroidstudioProjects/Lol/app/src/main/res/layout/fragment_news_detail.xml -->