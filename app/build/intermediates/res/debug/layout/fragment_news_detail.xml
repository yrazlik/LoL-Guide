<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_color"
            android:scrollbars="none">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/title"
            style="@style/whiteText20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_yellow"
            android:textStyle="bold"/>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/largeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/message"
            style="@style/whiteText14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/largeImage"
            android:layout_marginTop="15dp"
            android:textIsSelectable="true"
            />

        <View
            android:id="@+id/blank"
            android:layout_width="match_parent" android:layout_height="10dp"
            android:layout_below="@+id/message"></View>

        <RelativeLayout
            android:id="@+id/wvLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/blank"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/watchFullScreenTV"
                style="@style/whiteText14dp" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:text="@string/watch_full_screen" android:textColor="@color/button_blue"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/clickToUpdate"
                style="@style/whiteText14dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_below="@+id/watchFullScreenTV" android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:text="@string/click_to_update" android:textColor="@color/button_blue"
                android:textStyle="bold"/>
            <WebView
                android:id="@+id/wv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/clickToUpdate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp">

            </WebView>

        </RelativeLayout>


    </RelativeLayout>

</ScrollView><!-- From: file:/Users/yrazlik/AndroidstudioProjects/Lol/app/src/main/res/layout/fragment_news_detail.xml -->