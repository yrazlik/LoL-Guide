<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/app_color"
                android:layout_height="100dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/discountImage"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"/>

    <RelativeLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/discountImage">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Taşralı Renekton"
            android:textColor="@color/material_yellow"
            style="@style/whiteText16dp"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            style="@style/whiteText13dp"
            android:text="25-12-2015 - 28-12-2015"
            android:singleLine="true"/>

        <RelativeLayout
            android:id="@+id/priceContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/date"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal">

            <ImageView android:id="@+id/rpImage" android:layout_width="15dp"
                       android:layout_height="15dp"
                       android:background="@drawable/rp"/>
            <TextView
                android:id="@+id/priceBeforeDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rpImage"
                android:layout_marginLeft="10dp"
                style="@style/whiteText13dp"
                android:text="880"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/priceAfterDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/priceBeforeDiscount"
                android:layout_marginLeft="10dp"
                style="@style/whiteText13dp"
                android:text="475"
                android:singleLine="true"
                />

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout><!-- From: file:/Users/yrazlik/AndroidstudioProjects/Lol/app/src/main/res/layout/list_row_discount_costumes.xml -->